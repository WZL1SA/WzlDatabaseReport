<Window x:Class="WzlDatabaseReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WzlDatabaseReport"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="GetFirstLetterTb" Width="80" Margin="20" Height="20" />
        <Button x:Name="CreateReportBtn"
                Content="Create PDF report" 
                Click="CreateReportBtn_Click" 
                Width="100" 
                Height="30"/>

        <Button x:Name="CreateExcellBtn"
                Content="Create Excel report" 
                Click="CreateExcelReportBtn_Click" 
                Width="100" 
                Height="30"/>
    </StackPanel>
</Window>
